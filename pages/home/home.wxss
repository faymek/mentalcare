
.item{
  display: flex;
  flex-direction: row;
  background-color: #58C9B9;
  padding: 10rpx;
  border-radius: 16rpx;
  margin-top: 10rpx;
  margin-left: 10rpx; 
  margin-right: 10rpx;
}

.item_name {
  color: #ffffff;
}

.item_mood{
  width: 90%;
  height: 100rpx;
  font-size: 11pt;
  color: #ffffff;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
}
.item_lastevent{
  width: 450rpx;
  font-size: 10pt;
  color: #ffffff;
}
.item_lastdata{
  width: 100%;
  font-size: 10pt;
  color: #ffffff;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-left: 20rpx;
}

.hover-class{
  background-color: #519D9E;
}
